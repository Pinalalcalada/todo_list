<h1 class="s-t-d">SIMPLE TODO LISTS</h1>

<div class="project">
    <div class="panelHead">
        <div class="calendar ib">
            <%= image_tag("calendar.png", size: "25x25", alt: "cal") %>
        </div>
        <div ng-repeat="project in list" class="projName ib">
            {{project.name}}
        </div>
        <div class="panel-buttons ib">
            <div class="float-buttons"></div>
            <div class="panel-links-container">
            
                <a href="" class="panel-links">
                    <%= image_tag("deadline.png", size: "25x25", alt: "deadline") %>
                </a>
            
                <a href="" class="panel-links">
                    <%= image_tag("delete.png", size: "25x25", alt: "delete") %>
                </a>
                
                <a href="" class="panel-links">
                    <%= image_tag("edit.png", size: "25x25", alt: "edit") %>
                </a>
            </div>
        </div>
    </div>
    
    <div class="taskCreate">
        <form method="post" class="task-create">
            <input type="text" placeholder="text" class="button-text">
            <input type="button" class="btn btn-success" value="send">
        </form>
    </div>
    <div class="taskList">
        <div class="inline-block">
            <form method="post">
                <input type="checkbox">
            </form>
        </div> 
        <div class="inline-block task-list-cont"><p class="task-list-text">Name of the Task</p></div>
        <div class="task-list-row inline-block">
            <a href=""><%= image_tag("edit.png", size: "25x25", alt: "edit") %> </a>
            <a href=""><%= image_tag("delete.png", size: "25x25", alt: "delete") %></a>
        </div>
    </div>
</div>

<div class="add-task">
    <form method="post" action="">
        <input type="button" class="btn-success" value="Add Todo List">
    </form>
</div>
<div ng-controller="ProjectsController as projects">
<a href="" ng-click="projects.click()">click me</a>
</div>